%h1 Sign up
= form_for :user, url: users_path do |f|


  = f.label :f_name
  = f.text_field :f_name
  %br/

  = f.label :l_name
  = f.text_field :l_name
  %br/

  = f.label :email
  = f.text_field :email
  %br/

  = f.label :password
  = f.password_field :password
  %br/

  = f.label :location
  = f.text_field :location
  %br/

  = f.label :day
  = f.text_field :day
  = f.label :month
  = f.text_field :month
  = f.label :year
  = f.text_field :year
  %br/

  = f.label :gender
  %br/
  = radio_button_tag("user[gender]", "Male", true, class: "form-control")
  = label_tag(:gender_male, "Male")
  %br/
  = radio_button_tag("user[gender]", "Female", false, class: "form-control")
  = label_tag(:gender_female, "Female")
  %br/

  = f.label :profile_picture
  = f.file_field(:profile_picture)
  %br/

  = f.submit 'Sign up'
  or
  = link_to 'Back', root_path
