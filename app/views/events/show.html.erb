<h1><%= Event.find(params[:id]).eventName %></h1>
<p><%= Event.find(params[:id]).description %></p>


<h1>Posts</h1>
<%= form_for :post do |f| %>
	<%= f.text_area :post_content %><br />
	<%= f.submit "Post" %>
<% end %>
<% @posts.each do |post| %>
	<h3><%= link_to post.content, events_post_path(params[:id], post.id) %> by <%= link_to User.where(id: post.user_sender_id).first.f_name, user_show_path(post.user_sender_id) %></h3>
<% end %>

<h1>Members going to this event</h1>
<% @event_members.each do |member| %>
	<h3><%= link_to User.where(id: member["user_id"]).first.f_name, user_show_path(member["user_id"]) %></h3>
<% end %>
